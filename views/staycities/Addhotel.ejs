<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Popup Page</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            padding-top: 60%; /* Adjust padding to ensure content is visible */
        }
        .container {
            display: flex;
            flex-direction: column;
            align-items: center;
            text-align: center;
            width: 100%;
            max-width: 600px;
        }
        .form-section {
            display: none;
            width: 100%;
        }
        .form-group {
            text-align: left;
        }
    </style>
</head>
<body>
    <div class="container mt-4 shadow-lg p-4 rounded">
        <div class="btn-group mb-4" role="group" aria-label="Basic example">
            <button type="button" class="btn btn-primary" onclick="showSection('add')">Add</button>
        </div>
        <div id="add" class="form-section">
            <h3>Add Hotel</h3>
            <form action="/hotels/add/<%= staycity._id %>" method="POST" enctype="multipart/form-data" onsubmit="closeWindow()">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" class="form-control" id="title" name="hotel[title]" required>
                </div>
                <div class="form-group">
                    <label for="location">Hotel Brand</label>
                    <input type="text" class="form-control" id="location" name="hotel[brand]" required>
                </div>
                <div class="form-group">
                    <label for="area">Area</label>
                    <input type="text" class="form-control" id="area" name="hotel[area]" required>
                </div>
                <div class="form-group">
                    <label for="address">Address</label>
                    <input type="text" class="form-control" id="address" name="hotel[address]" required>
                </div>
                <div class="form-group">
                    <label for="nearby">Near By</label>
                    <input type="text" class="form-control" id="nearby" name="hotel[nearby]" required>
                </div>
                <div class="form-group">
                    <label for="capacity">Capacity</label>
                    <input type="text" class="form-control" id="capacity" name="hotel[capacity]" required>
                </div>
                <div class="form-group">
                    <label for="view">View Type</label>
                    <input type="text" class="form-control" id="view" name="hotel[view]" required>
                </div>
                <div class="form-group">
                    <label for="rating">Rating</label>
                    <input type="number" class="form-control" id="rating" name="hotel[rating]" min="1" max="5" required>
                </div>
                <div class="form-group">
                  <label for="category">category</label>
                  <br>
                  <select class="form-select" name="hotel[category]" id="category" required >
                  <option value="Resort">Resort</option>
                  <option value="Apartment">Apartment</option>
                  <option value="House">House</option>
                  </select>
                </div>

                <div class="form-group">
                    <label for="meals">meals inclusion</label>
                    <br>
                    <select class="form-select" name="hotel[meals]" id="meals" required >
                    <option value="No meals included">No meals included</option>
                    <option value="Free breakfast">Free breakfast</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label for="cancel">Cancellation Policy</label>
                    <input type="text" class="form-control" id="cancel" name="hotel[cancellation]" required>
                </div>
                

                <div class="form-group">
                    <label for="oldprice">Old Price</label>
                    <input type="number" class="form-control" id="oldprice" name="hotel[oldprice]" required>
                </div>
                <div class="form-group">
                    <label for="newprice">New Price</label>
                    <input type="number" class="form-control" id="newprice" name="hotel[newprice]" required>
                </div>
                
                <div class="form-group mb-3">
                    <div class="input-group">
                      <input type="file" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload" name="image" multiple>
                    </div>
                </div>

    
                <button type="submit" class="btn btn-success">Submit</button>
            </form>
        </div>
    </div>
   
     <script>
        function showSection(section) {
            document.querySelectorAll('.form-section').forEach(el => el.style.display = 'none');
            document.getElementById(section).style.display = 'block';
        }
        function closeWindow() {
            setTimeout(() => {
                window.opener.location.reload();
                window.close();
            }, 500); // Adjust timeout as needed
        }
        // Show the 'add' section by default
        showSection('add');
    </script>
     </script>
</body>
</html>
